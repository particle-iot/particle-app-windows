<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="BackButton" TargetType="Button">
        <Border Margin="0" Padding="0" Background="Transparent">
            <Image Margin="0,12" Source="/Assets/Icons/IconBackArrow.png" />
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="EditButton" TargetType="Button">
        <Border Margin="0" Padding="0" Background="Transparent">
            <Image Margin="0,12" Source="/Assets/Icons/IconEdit.png" />
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="MoreButton" TargetType="Button">
        <Border Margin="0" Padding="0" Background="Transparent">
            <Image Margin="0,12" Source="/Assets/Icons/IconMore.png" />
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="RefreshButton" TargetType="Button">
        <Border Margin="0" Padding="0" Background="Transparent">
            <Grid>
                <Image Margin="0,12" Source="/Assets/Icons/IconRefresh.png" />
                <ProgressRing MinWidth="0" MinHeight="0" Background="Transparent" />
            </Grid>
        </Border>
    </ControlTemplate>
</ResourceDictionary>
